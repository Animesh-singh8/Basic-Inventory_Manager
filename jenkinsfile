pipeline {
  agent any

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Build Image') {
      steps {
        script {
          // build Docker image using host docker (via mounted socket)
          sh 'docker build -t inventory-app:latest .'
        }
      }
    }

    stage('Stop & Remove Old Container') {
      steps {
        sh '''
          if [ "$(docker ps -q -f name=inventory_app)" ]; then
            docker stop inventory_app
            docker rm inventory_app
          fi
        '''
      }
    }

    stage('Run Container') {
      steps {
        sh '''
          docker run -d --name inventory_app -p 5000:5000 inventory-app:latest
        '''
      }
    }

    stage('Cleanup') {
      steps {
        echo "Deployment finished."
      }
    }
  }

  post {
    always {
      echo "Pipeline complete"
    }
  }
}
